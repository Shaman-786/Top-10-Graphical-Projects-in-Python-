import tkinter as tk
import random

class FlashcardApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Flashcard App")

        self.flashcards = {}
        self.current_card = None

        self.label_question = tk.Label(root, text="", font=("Arial", 24))
        self.label_question.pack(pady=20)

        self.entry_answer = tk.Entry(root, width=30)
        self.entry_answer.pack(pady=10)

        self.button_check = tk.Button(root, text="Check Answer", command=self.check_answer)
        self.button_check.pack(pady=10)

        self.button_next = tk.Button(root, text="Next Card", command=self.next_card)
        self.button_next.pack(pady=10)

        self.load_flashcards()

    def load_flashcards(self):
        self.flashcards = {
            "What is the capital of France?": "Paris",
            "What is 2 + 2?": "4",
            "What is the color of the sky?": "Blue",
        }
        self.next_card()

    def next_card(self):
        self.current_card = random.choice(list(self.flashcards.keys()))
        self.label_question.config(text=self.current_card)
        self.entry_answer.delete(0, tk.END)

    def check_answer(self):
        user_answer = self.entry_answer.get()
        if user_answer.lower() == self.flashcards[self.current_card].lower():
            self.label_question.config(text="Correct!")
        else:
            self.label_question.config(text=f"Wrong! Correct answer: {self.flashcards[self.current_card]}")

root = tk.Tk()
app = FlashcardApp(root)
root.mainloop()
